{
  "env": {
    "commonjs": true,
    "jest/globals": true,
    "es6": true,
    "node": true
  },
  "extends": "eslint:recommended",
  "globals": {
    "Atomics": "readonly",
    "SharedArrayBuffer": "readonly"
  },
  "parserOptions": {
    "ecmaVersion": 2018
  },
  "rules": {
    "quotes": ["error", "single"],
    "semi": ["error", "always"],
    "no-empty": "error",
    "no-multiple-empty-lines": "warn"
  }
}
